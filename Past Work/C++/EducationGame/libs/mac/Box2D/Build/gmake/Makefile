# GNU Make workspace makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Box2D_config = debug
  GLUI_config = debug
  HelloWorld_config = debug
  Testbed_config = debug
endif
ifeq ($(config),release)
  Box2D_config = release
  GLUI_config = release
  HelloWorld_config = release
  Testbed_config = release
endif

PROJECTS := Box2D GLUI HelloWorld Testbed

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Box2D:
ifneq (,$(Box2D_config))
	@echo "==== Building Box2D ($(Box2D_config)) ===="
	@${MAKE} --no-print-directory -C . -f Box2D.make config=$(Box2D_config)
endif

GLUI:
ifneq (,$(GLUI_config))
	@echo "==== Building GLUI ($(GLUI_config)) ===="
	@${MAKE} --no-print-directory -C . -f GLUI.make config=$(GLUI_config)
endif

HelloWorld: Box2D
ifneq (,$(HelloWorld_config))
	@echo "==== Building HelloWorld ($(HelloWorld_config)) ===="
	@${MAKE} --no-print-directory -C . -f HelloWorld.make config=$(HelloWorld_config)
endif

Testbed: Box2D GLUI
ifneq (,$(Testbed_config))
	@echo "==== Building Testbed ($(Testbed_config)) ===="
	@${MAKE} --no-print-directory -C . -f Testbed.make config=$(Testbed_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f Box2D.make clean
	@${MAKE} --no-print-directory -C . -f GLUI.make clean
	@${MAKE} --no-print-directory -C . -f HelloWorld.make clean
	@${MAKE} --no-print-directory -C . -f Testbed.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Box2D"
	@echo "   GLUI"
	@echo "   HelloWorld"
	@echo "   Testbed"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"